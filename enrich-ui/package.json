{
	"name": "enrich-ui",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:css": "tailwindcss -o output.css",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig tsconfig.json --watch",
		"test:unit": "vitest run --coverage",
		"lint": "prettier --plugin-search-dir src --check . && eslint .",
		"lint:ci": "prettier --plugin-search-dir src --list-different . && eslint .",
		"format": "prettier --plugin-search-dir src --write ."
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@skeletonlabs/skeleton": "^1.2.5",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-node": "^1.2.4",
		"@sveltejs/kit": "^1.5.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"@vitest/coverage-c8": "^0.30.1",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.26.0",
		"feather-icons": "^4.29.0",
		"msw": "^1.2.1",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.0",
		"vitest": "^0.30.1"
	},
	"type": "module",
	"dependencies": {
		"@floating-ui/dom": "^1.2.8",
		"highlight.js": "^11.8.0",
		"svelte-jsoneditor": "^0.17.3"
	}
}
